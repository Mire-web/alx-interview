#!/usr/bin/python3
"""
Solving the island perimeter challenge in python
using DFS
"""
def dfs(grid, row, col, visited):
    if (row >= len(grid) or col >= len(grid[0]) or grid[row][col] == 0):
        return 0
    visited.add((row, col))
    size = 0

    for dr, dc in [(-1, 0), (0, -1), (1, 0), (0, 1)]:
        size += dfs(grid, row + dr, col + dc, visited)
    return size

def island_perimeter(grid):
    visited = set()
    for row in grid:
        for col in row:
            if col == 1:
                return dfs(grid, row, col, visited) * 2

